{
  final JPanel nameDatesPanel=new JPanel(new GridLayout(3,1,5,5));
  nameDatesPanel.setBorder(new TitledBorder(headline));
  nameDatesPanel.add(new CLabeledComponent("Name" + ":",name.getHelp(),m_nameTextField));
